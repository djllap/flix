<% title("#{@movie.title} (#{@movie.released_on.year})") %>

<article id="movie" class="movie">
  <header>
    <%= image_for(@movie) %>
    <h1><%= @movie.title %></h1>
      <span id="stars">
        <%= format_average_stars(@movie) %>
      </span>
      <span id="rating">
        <%= format_average_stars_text(@movie) %>      
      </span>

      <h2>Released: <%= @movie.released_on %></h2>

      <p>
        <%= pluralize(@fans.size, 'fan') %> 
      </p>
      <% if current_user %>
        <% if @current_favorite %>
          <%= button_to "Unfave", movie_favorite_path(@movie, @current_favorite), method: :delete, class: "button unfave" %>
        <% else %>
          <%= button_to "Fave", movie_favorites_path(@movie) %>
        <% end %>
      <% end %>    
  </header>

  <p class="description">
    <%= @movie.description %>
  </p>
  
  <h3 class="no-rule">
    <%= @movie.rating %> &bull; <%= @movie.duration %> 
  </h3>
  
  <h3>Cast</h3>
  <p>
    <%= @movie.cast %>
  </p>
  
  <h3>Director</h3>
  <p>
    <%= @movie.director %>
  </p>
  
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>

  <% if @movie.recent_reviews.any? %>
    <h3>Recent Reviews</h3>
    <ol id="reviews">
      <% @movie.recent_reviews.each do |review| %>
        <li>
          <span class="review"><%= show_stars(review) %></span>
          <span class="user">by <%= review.user.name %></span>
          <span class="date"><%= time_ago_in_words(review.created_at) %> ago</span>
          <p>
            &quot;<%= review.comment %>&quot;
          </p>
        </li>
      <% end %>
    </ol>
    <p>
      Read all <%= link_to pluralize(@movie.reviews.size, "review"), 
                      movie_reviews_path(@movie) %>
    </p>
  <% else %>
    <h3>Reviews</h3>
    <p>
      <%= link_to pluralize(@movie.reviews.size, "review"), 
                    movie_reviews_path(@movie) %>
    </p>
  <% end %>

  <footer>
    <nav>
      <%= link_to 'Write Review', new_movie_review_path(@movie), 
                  class: 'button ok review' %>
      <% if current_user_admin? %>      
        <%= link_to 'Edit', edit_movie_path(@movie), class: 'button' %>
        <%= link_to 'Delete', @movie, 
                    class: 'button',
                    method: :delete, 
                    data: { confirm: "Are you sure you want to delete #{@movie.title}?"} %> 
      <% end %>     
    </nav>
  </footer>
</article>



<% content_for :side do %>
    <% if @fans.any? %>
      <h3>Fans</h3>
      <ul>
        <% @fans.each do |user| %>
          <li>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    <% end %>

    <h3>Genres</h3>
      <% if @genres.any? %>
        <ul>
          <% @movie.genres.each do |genre| %>
            <li><%= genre.name %></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no listed genres for <%= @movie.title %></p>
      <% end %>
    <% end %> 
